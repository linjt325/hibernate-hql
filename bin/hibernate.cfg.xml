<!--   <mapping resource="com/lin/hibernate_mapping/pojoOne2One/foreign/Manager.hbm.xml"/> -->
<!--   <mapping resource="com/lin/hibernate_mapping/pojoOne2One/primary/Department.hbm.xml"/> -->
<!--   <mapping resource="com/lin/hibernate_mapping/pojoOne2One/primary/Manager.hbm.xml"/> -->
  <mapping resource="com/lin/hibernate_mapping/pojoMany2Many/single/Catagory.hbm.xml"/>
  <mapping resource="com/lin/hibernate_mapping/pojoMany2Many/single/Item.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
